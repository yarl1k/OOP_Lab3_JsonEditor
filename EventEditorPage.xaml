<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JsonEditor.EventEditorPage"
             Title="Редагування події">
    <VerticalStackLayout Spacing="15" Padding="20">

        <Label Text="Назва заходу:" />
        <Entry Text="{Binding Event_name}" Placeholder="Введіть назву"/>

        <Label Text="Департамент:" />
        <Entry Text="{Binding Department}" Placeholder="Введіть департамент"/>

        <Label Text="Дата (РРРР-ММ-ДД):" />
        <Entry Text="{Binding Event_date}" 
       Placeholder="2025-11-22"
       Keyboard="Numeric"
       MaxLength="10"
       TextChanged="OnDateChanged"/>

        <Label Text="Час (ГГ:ХХ):" />
        <Entry Text="{Binding Event_time}" 
       Placeholder="14:00"
       Keyboard="Numeric"
       MaxLength="5"
       TextChanged="OnTimeChanged"/>

        <Label Text="Локація:" />
        <Entry Text="{Binding Event_location}" Placeholder="Аудиторія 101"/>

        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" Margin="0,20,0,0">
            <Button Text="Зберегти" Clicked="OnSaveClicked" BackgroundColor="LightGreen" WidthRequest="120"/>
            <Button Text="Скасувати" Clicked="OnCancelClicked" BackgroundColor="Red" WidthRequest="120"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>